@{
    Layout = "Auth/_LayoutAuth";
}

@model LoginViewModel
<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                        <a href="index.html" class="logo d-flex align-items-center w-auto">
                            <img src="assets/img/logo.png" alt="">
                            <span class="d-none d-lg-block">Troll Market</span>
                        </a>
                    </div><!-- End Logo -->

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                                <p class="text-center small">Enter your username & password to login</p>
                            </div>

                            <form asp-action="Login" method="post" id="formLogin" class="row g-3 needs-validation">

                                <div style="display:none" id="messageError" class="alert alert-danger alert-dismissible fade show" role="alert">
                                   
                                </div>


                                <div class="col-12">
                                    <label asp-for="Username" class="form-label">Username</label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text" id="inputGroupPrepend"></span>
                                        <input asp-for="Username" class="form-control" id="username" required>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input type="password" asp-for="Password" class="form-control" id="password" required>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Role" class="form-label">Role</label>
                                    <select asp-for="Role" class="form-select" id="role" required>
                                        <option value="">----Choice----</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Buyer">Buyer</option>
                                        <option value="Seller">Seller</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100" id="btnLogin" type="submit">Login</button>
                                </div>
                                <div class="col-12">
                                    <p class="small mb-0">Don't have account Buyer? <a href="@Url.Action("Register", new {role = "Buyer"})">Create an account</a></p>
                                    <p class="small mb-0">Don't have account Seller? <a href="@Url.Action("Register", new {role = "Seller"})">Create an account</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="credits">
                        © 2023 Troll Market by Gigantara G Ngantung.
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    (function(){
        localStorage.clear();
        login();
    }());

    function login() {
        let form = document.querySelector('#formLogin');
        form.addEventListener('submit', function (e) {
            e.preventDefault();
            let username = document.querySelector('#username').value;
            let password = document.querySelector('#password').value;
            let role = document.querySelector('#role').value;
            let messageError = document.querySelector("#messageError");
            let button = document.querySelector("#btnLogin");
            let data = {
                "username": username,
                "password": password,
                "role": role
            };
            let url = `http://localhost:5201/Api/v1/Auth/Login`;
            let request = new XMLHttpRequest();
            request.open('POST', url);
            request.setRequestHeader("Content-Type", "application/json");
            button.setAttribute('disable', 'disabled');
            button.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Loading...';
            request.send(JSON.stringify(data));
            request.onload = () => {
                button.removeAttribute('disable');
                button.innerHTML = 'Login';
                let result = JSON.parse(request.response);
                console.log(result);
                if (result.error) {
                    messageError.style.display = 'block';
                    messageError.textContent = result.message;
                    setTimeout(function () {
                       messageError.style.display = 'none';
                    }, 2500);
                } else {
                    localStorage.setItem("token", result.detail.token);
                    Swal.fire({
                        icon: "success",
                        title: "Success",
                        text: result.message,
                        showConfirmButton: false,
                        timer: 1500
                    });
                    submitFormAfterLogin();
                }
            }
        })
    }
    function submitFormAfterLogin() {
        document.querySelector('#formLogin').submit();
    }
</script>